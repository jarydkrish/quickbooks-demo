<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Shipment Details</h1>
      <p class="mt-1 text-sm text-gray-500">Created <%= @shipment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_shipment_path(@shipment), class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      <%= button_to "Delete", shipment_path(@shipment), method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this shipment?" },
          class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Shipment Information</h2>
    </div>

    <div class="px-6 py-4 space-y-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @shipment.description %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= @shipment.status_pending? ? 'bg-yellow-100 text-yellow-800' : '' %>
            <%= @shipment.status_processing? ? 'bg-blue-100 text-blue-800' : '' %>
            <%= @shipment.status_shipped? ? 'bg-green-100 text-green-800' : '' %>
            <%= @shipment.status_delivered? ? 'bg-gray-100 text-gray-800' : '' %>
            <%= @shipment.status_cancelled? ? 'bg-red-100 text-red-800' : '' %>">
            <%= @shipment.status.capitalize %>
          </span>
        </dd>
      </div>

      <% if @shipment.shipped_at? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Shipped Date</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @shipment.shipped_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6 bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Shipment Items</h2>
    </div>

    <% if @shipment.shipment_items.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @shipment.shipment_items.each do |item| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= item.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= item.quantity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-4">
        <p class="text-sm text-gray-500">No items in this shipment.</p>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "← Back to Shipments", shipments_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
  </div>
</div>
