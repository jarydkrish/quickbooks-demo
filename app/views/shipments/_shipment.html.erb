<li id="<%= dom_id(shipment) %>" class="flex items-center justify-between gap-x-6 py-5">
  <div class="min-w-0">
    <div class="flex items-start gap-x-3">
      <p class="text-sm/6 font-semibold text-gray-900">
        <%= link_to shipment.description, shipment_path(shipment), class: "hover:text-blue-600" %>
      </p>
      <% case shipment.status %>
      <% when 'pending' %>
        <p class="mt-0.5 rounded-md bg-yellow-50 px-1.5 py-0.5 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
          Pending
        </p>
      <% when 'generating_invoice' %>
        <p class="mt-0.5 rounded-md bg-purple-50 px-1.5 py-0.5 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-600/20">
          Generating Invoice
        </p>
      <% when 'downloading_packslip' %>
        <p class="mt-0.5 rounded-md bg-indigo-50 px-1.5 py-0.5 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-600/20">
          Downloading Packslip
        </p>
      <% when 'awaiting_shipment' %>
        <p class="mt-0.5 rounded-md bg-blue-50 px-1.5 py-0.5 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/20">
          Awaiting Shipment
        </p>
      <% when 'shipped' %>
        <p class="mt-0.5 rounded-md bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
          Shipped
        </p>
      <% when 'delivered' %>
        <p class="mt-0.5 rounded-md bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
          Delivered
        </p>
      <% when 'cancelled' %>
        <p class="mt-0.5 rounded-md bg-red-50 px-1.5 py-0.5 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">
          Cancelled
        </p>
      <% end %>
      <% if shipment.has_invoice? %>
        <p class="mt-0.5 rounded-md bg-purple-50 px-1.5 py-0.5 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-600/20">
          <% if shipment.has_invoice_pdf? %>
            üìÑ Invoice
          <% else %>
            ‚è≥ Invoice
          <% end %>
        </p>
      <% end %>
    </div>
    <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500">
      <p class="whitespace-nowrap">
        Created <time datetime="<%= shipment.created_at.iso8601 %>"><%= time_ago_in_words(shipment.created_at) %> ago</time>
      </p>
      <% if shipment.shipped_at? %>
        <svg viewBox="0 0 2 2" class="size-0.5 fill-current">
          <circle r="1" cx="1" cy="1" />
        </svg>
        <p class="whitespace-nowrap">
          Shipped <time datetime="<%= shipment.shipped_at.iso8601 %>"><%= shipment.shipped_at.strftime("%B %d, %Y") %></time>
        </p>
      <% end %>
      <% if shipment.shipment_items.any? %>
        <svg viewBox="0 0 2 2" class="size-0.5 fill-current">
          <circle r="1" cx="1" cy="1" />
        </svg>
        <p class="truncate">
          <%= pluralize(shipment.shipment_items.size, 'item') %>:
          <%= shipment.shipment_items.first(2).map { |item| "#{item.name} (#{item.quantity})" }.join(", ") %>
          <%= "..." if shipment.shipment_items.size > 2 %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="flex flex-none items-center gap-x-4">
    <span class="hidden sm:inline-flex isolate rounded-md shadow-sm">
      <%= link_to shipment_path(shipment),
          class: "relative inline-flex items-center rounded-l-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-10" do %>
        View<span class="sr-only"> shipment <%= shipment.description %></span>
      <% end %>
      <% unless shipment.has_invoice? %>
        <%= button_to create_invoice_shipment_path(shipment), method: :post,
            class: "relative -ml-px inline-flex items-center rounded-r-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-10" do %>
          Create Invoice<span class="sr-only"> for <%= shipment.description %></span>
        <% end %>
      <% else %>
        <% if shipment.has_invoice_pdf? %>
          <%= link_to rails_blob_path(shipment.invoice_pdf, disposition: "attachment"),
              class: "relative -ml-px inline-flex items-center rounded-r-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-10" do %>
            Download PDF<span class="sr-only"> for <%= shipment.description %></span>
          <% end %>
        <% else %>
          <div class="relative -ml-px inline-flex items-center rounded-r-md bg-gray-50 px-3 py-2 text-sm font-medium text-gray-500 ring-1 ring-inset ring-gray-300">
            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Generating...
          </div>
        <% end %>
      <% end %>
    </span>
    <div class="relative flex-none" data-controller="dropdown">
      <button data-action="click->dropdown#toggle"
              class="relative block text-gray-500 hover:text-gray-900">
        <span class="absolute -inset-2.5"></span>
        <span class="sr-only">Open options</span>
        <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
        </svg>
      </button>
      <div data-dropdown-target="menu"
           class="hidden absolute right-0 z-10 mt-2 w-32 origin-top-right rounded-md bg-white py-2 shadow-lg outline outline-1 outline-gray-900/5">
        <%= link_to edit_shipment_path(shipment),
            class: "block px-3 py-1 text-sm/6 text-gray-900 hover:bg-gray-50" do %>
          Edit<span class="sr-only">, <%= shipment.description %></span>
        <% end %>
        <%= button_to shipment_path(shipment), method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this shipment?" },
            class: "block w-full text-left px-3 py-1 text-sm/6 text-gray-900 hover:bg-gray-50" do %>
          Delete<span class="sr-only">, <%= shipment.description %></span>
        <% end %>
      </div>
    </div>
  </div>
</li>
