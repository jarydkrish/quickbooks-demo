<%= form_with(model: shipment, local: false) do |form| %>
  <div class="space-y-12">
    <% if shipment.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(shipment.errors.count, "error") %> prohibited this shipment from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc space-y-1 pl-5">
                <% shipment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base/7 font-semibold text-gray-900">Shipment Details</h2>
      <p class="mt-1 text-sm/6 text-gray-600">
        Provide the basic information about this shipment.
      </p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="col-span-full">
          <%= form.label :description, class: "block text-sm/6 font-medium text-gray-900" %>
          <div class="mt-2">
            <%= form.text_area :description, rows: 3,
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
          </div>
          <p class="mt-3 text-sm/6 text-gray-600">Brief description of the shipment contents and purpose.</p>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :status, class: "block text-sm/6 font-medium text-gray-900" %>
          <div class="mt-2 grid grid-cols-1">
            <%= form.select :status,
                options_for_select(Shipment.statuses.keys.map {|status| [status.humanize, status]}, shipment.status),
                {},
                class: "col-start-1 row-start-1 w-full appearance-none rounded-md bg-white py-1.5 pl-3 pr-8 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
            <svg class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4" viewBox="0 0 16 16" fill="currentColor">
              <path fill-rule="evenodd" d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :shipped_at, class: "block text-sm/6 font-medium text-gray-900" %>
          <div class="mt-2">
            <%= form.datetime_local_field :shipped_at,
                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
          </div>
        </div>
      </div>
    </div>

    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base/7 font-semibold text-gray-900">Shipment Items</h2>
      <p class="mt-1 text-sm/6 text-gray-600">
        Add the items included in this shipment with their quantities.
      </p>

      <div class="mt-10" id="shipment_items" data-controller="nested-form" data-nested-form-wrapper-selector-value=".nested-fields">
        <div class="space-y-6">
          <%= form.fields_for :shipment_items do |item_form| %>
            <%= render "shipment_item_fields", f: item_form %>
          <% end %>
        </div>

        <div class="mt-6 flex items-center gap-x-6">
          <button type="button" data-action="click->nested-form#add"
                  class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
            Add Item
          </button>
        </div>

        <template data-nested-form-target="template">
          <%= form.fields_for :shipment_items, ShipmentItem.new, child_index: "NEW_RECORD" do |item_form| %>
            <%= render "shipment_item_fields", f: item_form %>
          <% end %>
        </template>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", shipments_path, class: "text-sm/6 font-semibold text-gray-900" %>
    <%= form.submit class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>
